                    </small>
                </div>
                <p>
                  @item.Content
                </p>
            </div>   </li>*@

                            }


                        </ul>
                    </div>
                    <form method="post">
                    <div class="panel-footer">
                        <div class="input-group">
                            <input id="btn-input" name="NewMessage" type="text" class="form-control input-sm" placeholder="Type your message here..." />
                            <input type="hidden" value="@ViewBag.ConversationId" name="ConID"/>
                            <span class="input-group-btn">
                                <button class="btn btn-warning btn-sm" id="btn-chat">
                                    Send
