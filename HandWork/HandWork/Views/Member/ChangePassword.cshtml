@using Entity.ViewModel
@model ChangePasViewModel
@{
    Layout = "~/Views/Shared/ProfileLayout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Member", FormMethod.Post, new { @class = "form-group" }))
{
    if (ViewBag.Result != null)
    {
<p class="alert-primary">ViewBag.Result</p>
    }

    <div class="form-group pass_show">
        @Html.TextBoxFor(x => x.CurrentPassword, new { @class = "form-control", @placeholder = "Güncel Şifre?", @type = "password" })

    </div>
    <div class="form-group pass_show">
        @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", @placeholder = "Yeni şifre?", @type = "password" })

    </div>
    <div class="form-group pass_show">
        @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Şifre Tekrarı", @type = "password" })
    </div>
    <div class="form-group pass_show">
        <button class="btn-success">Kaydet</button>
    </div>

}