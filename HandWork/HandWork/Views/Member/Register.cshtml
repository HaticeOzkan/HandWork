@using Entity
@model Member

@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<style>
    body {
       background-image: url('../../Content/img/CategoryImage/Orgum.jpg'); background-size:cover;
    }
</style>
<br /><br /><br /><br />

                  
                  <div class="container" style=" background: rgba(0,0,0,0.5);" >
                      <h3 style="color:azure; font-weight:bold;" class="text-center">Register Now</h3>
                          
                              @if (TempData["Error"] != null)
                              {
                                  <p class="alert alert-danger">@TempData["Error"]</p>
                              }
                              
                      <br /><br />
                              @using (Html.BeginForm("Register", "Member", FormMethod.Post, htmlAttributes: new { @style = "display:block;", @class = "register-form", @enctype = "multipart/form-data" }))
                              {
                                  @Html.AntiForgeryToken()
                              <div style="position:relative; left:150px;" class="row">
                                  <div class="col-md-6">
                                      <div class="form-group">
                                          @*@Html.Label("Kullanıcı Adı", new { @class = "text-uppercase" })*@
                                          @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @type = "name", @placeholder = "Kullanıcı Adı", @required = "required" })

                                      </div>

                                      <div class="form-group">

                                          @*@Html.Label("Email Adres", new { @class = "text-uppercase" })*@
                                          @Html.TextBoxFor(x => x.Email, new { @type = "email", @class = "form-control", @placeholder = "Email Adres", @required = "required" })
                                      </div>

                                      <div class="form-group">

                                          @*@Html.Label("Adres", new { @class = "text-uppercase" })*@
                                          @Html.TextAreaFor(x => x.Address, 6, 5, new { @type = "address", @class = "form-control", @placeholder = "Adres", @required = "required" })
                                      </div>
                                  </div>
                                  <div class="col-md-6">
                                      <div class="form-group">

                                          @*@Html.Label("Telefon", new { @class = "from-control" })*@
                                          @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", @type = "phone", @placeholder = "Telefon Numarası", @required = "required" })
                                      </div>
                                      <div class="form-group">

                                          @Html.Label("Profil Resmi", new { @class = "from-control", @style = "font-weight:bold; color:white;" })
                                          @Html.TextBox("image", null, new { @class = "form-control", @type = "file", @required = "required" })

                                      </div>

                                      <div class="form-group">
                                          @*@Html.Label("Şifre", new { @class = "from-control" })*@
                                          @Html.TextBox("Password", null, new { @type = "password", @class = "form-control", @placeholder = "Şifre", @required = "required" })
                                      </div>
                                      <div class="form-group">
                                          @*@Html.Label("Şifre Tekrarı", new { @class = "from-control" })*@
                                          @Html.TextBox("ConfirmPassword", null, new { @type = "password", @class = "form-control", @placeholder = "Şifre Tekrarı", @required = "required" })
                                      </div>


                                      <br />

                                      <div class="form-check">
                                          <button type="submit" class="btn btn-primary">Kayıt ol</button>
                                      </div>
                                  </div>
                              </div>
                                      }
             </div>
