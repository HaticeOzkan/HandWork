@using Entity
@model Product
@{
    ViewBag.Title = "ProductDetail";
}
<div class="container">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-6">
                    <div class="preview-pic tab-content">
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model.ProductImages)
                        {
                            count = count + 1;
                            <div class="tab-pane active" id="pic-@count"><img src="@item.LargeImageURL" /></div>

                        }
                    </div>
                    <ul class="preview-thumbnail nav nav-tabs">
                        @{
                            int count2 = 0;
                        }
                        @foreach (var item in Model.ProductImages)
                        {
                            count2 = count2 + 1;
                            <li class="active"><a data-target="#pic-@count2" data-toggle="tab"><img src="@item.ThumbImageURL" /></a></li>
                        }
                    </ul>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.ProductName</h3>
                    <div class="rating">
                        <div class="stars">
                            <div class="pull-right">@Model.LikeCount <a href="/Home/Index/Like=@Model.ID" class="btn btn-danger btn-sm" role="button"><i class="far fa-thumbs-up"></i></a></div>@*begenme sayısı bir artacak*@
                            <div class="pull-right">@Model.DisLikeCount <a href="/Home/Index/DisLike=@Model.ID" class="btn btn-danger btn-sm" role="button"><i class="far fa-thumbs-down"></i></a></div>@*begenmeme sayısı bir artacak*@
                        </div>
                       
                    </div>
                    <p class="product-description">@Model.Description</p>
                    <h4 class="price">current price: <span>@Model.Price.ToString("C")</span></h4>
                    <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>                 
                    <h5 class="colors">
                        colors:
                        <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
                        <span class="color green"></span>
                        <span class="color blue"></span>
                    </h5>
                    <div class="action">
                        <button class="add-to-cart btn btn-default" type="button">add to cart</button>
                        <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
